doctype html

mixin navbar()
  -var items = {"Home": "/", "Upload": "/upload", "Browse": "/browse"}
  nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/',style="padding:0;")
            img(src="/flode.png", style="height:100%")
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            each key, item in items
              li(class=activePage===key?"active":"")
                a(href=key)= item

html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title Flode - #{pagetitle}
    // Bootstrap core CSS
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // Custom styles for this template
    link(href='/stylesheets/style.css', rel='stylesheet')
    script(src='/js/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    

      link(type='text/css', rel='stylesheet', href='/materialize/css/materialize.min.css', media='screen,projection')
      link(href='/stylesheets/layout.css', type='text/css', rel='stylesheet', media='screen,projection')

      script(src='/jquery/js/jquery.2.1.1.min.js')
      script(src='/materialize/js/materialize.min.js')
      script(src='/js/layout.js')
    block js
    
  body
    +navbar()
    .container
      .starter-template
        block content
        

