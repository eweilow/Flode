extends layout

block js
  script(src="/js/websock.js")

block content
  style.
    img {max-width: 250px; margin: 5px; display: inline-block; max-height: 500px; }
  
  p(role="alert").alert.alert-danger#connectionstatus LIVE UPDATE: Not connected to server
  h1 Media gallery
  
  each file in files
    if file.toLowerCase().indexOf(".png") > 0
      img(src=file)
    else if file.toLowerCase().indexOf(".jpg") > 0
      img(src=file)
    else if file.toLowerCase().indexOf(".bmp") > 0
      img(src=file)
    else if file.toLowerCase().indexOf(".mov") > 0
      video(width="250", height="250", controls)
        source(src=file, type="video/quicktime")
        Your browser does not like this video.
    else if file.toLowerCase().indexOf(".mp4") > 0
      video( width="250", height="250", controls)
        source(src=file, type="video/mp4")
        Your browser does not like this video.

